{
    "compilerOptions": {
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES6",
        "typeRoots" : ["./typedefs", "node_modules/@types"],
        "moduleResolution": "node",
        "noImplicitThis": true,
        "types": ["jest"],
        "module": "ESNext"
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
